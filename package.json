{
  "name": "rainbow-relax",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.widget.config.ts",
    "build": "vite build --config vite.widget.config.ts",
    "build:widget": "vite build --config vite.widget.config.ts",
    "lint": "eslint .",
    "test": "playwright test --config=tests/playwright.config.ts",
    "test:ui": "playwright test --config=tests/playwright.config.ts --ui",
    "test:headed": "playwright test --config=tests/playwright.config.ts --headed",
    "test:report": "playwright show-report",
    "test:debug": "playwright test --config=tests/playwright.config.ts --debug",
    "test:widget": "node test-widget-simple.js",
    "test:widget:serve": "npx serve dist-widget -p 8080",
    "test:pages": "npx serve test-pages -p 8081"
  },
  "dependencies": {
    "framer-motion": "^11.0.0",
    "i18next": "^23.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "postcss": "^8.4.0",
